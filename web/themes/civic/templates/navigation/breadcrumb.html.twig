{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {% for item in breadcrumb %}
    {% if item.url %}
      <a href="{{ item.url }}">{{ item.text }}</a> <i class="fa fa-angle-right" aria-hidden="true"></i>
    {% else %}
      {{ item.text }}
    {% endif %}
  {% endfor %}
{% endif %}
